# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# Security
SECRET_KEY=your-super-secret-key-here-generate-a-strong-one
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth (Use your existing credentials)
GOOGLE_CLIENT_ID=153507172332-nuslccrq2lvj5equi51fkta06uso1idp.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-frontend-domain.netlify.app/auth/callback

# Redis (Railway Redis)
REDIS_URL=redis://default:password@host:port

# Environment
ENVIRONMENT=production
DEBUG=false

# CORS
FRONTEND_URL=https://your-frontend-domain.netlify.app
ALLOWED_HOSTS=["*"]

# TikTok API (Optional - for future real scraping)
TIKTOK_CLIENT_KEY=optional
TIKTOK_CLIENT_SECRET=optional
